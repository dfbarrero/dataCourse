% General
\setbeamercolor{normal text}{fg=azulUAH}
\setbeamercolor{structure}{fg=azulUAH}
\setbeamercolor{alerted text}{fg=rojoUAH}
\setbeamercolor{example text}{fg=azulUAH}
\setbeamercolor{copyright text}{fg=azulUAH}

% Palettes
\setbeamercolor{palette primary}{fg=azulUAH, bg=white}
\setbeamercolor{palette secondary}{fg=white, bg=azulUAH}
\setbeamercolor{palette tertiary}{fg=white, bg=azulUAH}
\setbeamercolor{palette quaternary}{fg=white, bg=azulUAH}
\setbeamercolor{mini frame}{bg=azulUAH}
\setbeamercolor{section in head/foot}{fg=white, bg=azulUAH}

% Titlepage
\setbeamercolor{title}{parent=normal text}
\setbeamercolor{subtitle}{fg=azulUAH}
\setbeamercolor{institute}{parent=normal text}

% Content
\setbeamercolor{frametitle}{parent=palette primary}
\setbeamercolor{framesubtitle}{fg=hellblauMUW}

% Blocks
\setbeamercolor{block title}{fg=white,bg=azulUAH}
\setbeamercolor{block body}{fg=azulUAH, bg=azulUAH!15}
\setbeamercolor{block title example}{fg=white, bg=oroUAH}
\setbeamercolor{block body example}{fg=azulUAH, bg=oroUAH!25}
\setbeamercolor{block title alerted}{fg=white, bg=rojoUAH}
\setbeamercolor{block body alerted}{fg=azulUAH, bg=rojoUAH!25}

\setbeamercolor{qed}{fg=sthlmDarkGrey}
\setbeamercolor{itemize item}{fg=azulUAH}
\setbeamercolor{itemize subitem}{fg=azulUAH}
\setbeamercolor{itemize subsubitem}{fg=azulUAH}
% Notes
\setbeamercolor{note page}{fg=sthlmDarkGrey,bg=sthlmGrey}
\setbeamercolor{note title}{fg=white, bg=sthlmDarkGrey}
\setbeamercolor{note date}{parent=note title}

% Page Number
\setbeamercolor{page number in head/foot}{fg=sthlmDarkGrey}
\setbeamercolor{qed}{fg=sthlmGreen}

\if@beamer@sthlm@greybg
% General
